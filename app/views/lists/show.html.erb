<div class="container">
  <p><strong>movies</strong></p>
  <ul class="list-group">
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item">
        <% movie = Movie.find(bookmark.movie_id) %>
          <h2><%= movie.title %></p>
          <%= link_to "delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "remove movie from list?"} %>

        <div class="card-trip">
          <img src="<%= movie.poster_url %>" />
          <div class="card-trip-infos">
            <div>
              <h2><%= movie.title %></h2>
              <p><%= movie.overview %></p>
            </div>
            <h2 class="card-trip-pricing">Â£99.99</h2>
          </div>
        </div>



      </li>
    <% end %>
  </ul>
  <br>
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  <%= link_to "Back to lists", lists_path, class: "btn btn-primary" %>
</div>
