<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.visitstockholm.com/media/original_images/Salongsbild1.jpg);">
  <div class="container">
    <h1>Save any kind of movies</h1>
    <p>Classic</p>
  </div>
</div>
<div class="container">
  <h1>My Lists</h1>
  <ul class="list-group">
    <% @lists.each do |list| %>
    <li class="list-group-item">
      <p><%= list.name %></p>
    </li>
    <%= link_to "See details", list_path(list), class: "btn btn-primary" %>
  <% end %>
  </ul>

  <br>
  <br>
  <%= link_to "Create a list", new_list_path, class: "btn btn-primary" %>
</div>
