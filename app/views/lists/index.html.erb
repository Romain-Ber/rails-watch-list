<div class="container">
  <h1>Movie Lists</h1>
  <ul class="list-group">
    <% @lists.each do |list| %>
    <li class="list-group-item">
      <p><%= list.name %></p>
    </li>
    <%= link_to "See details", list_path(list), class: "btn btn-primary" %>
  <% end %>
  </ul>

  <br>
  <br>
  <%= link_to "Create a list", new_list_path, class: "btn btn-primary" %>
</div>
